<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.losgai.gulimall.ware.dao.WmsWareSkuDao">

    <resultMap type="com.losgai.gulimall.ware.entity.WmsWareSkuEntity" id="wmsWareSkuMap">
        <result property="id" column="id"/>
        <result property="skuId" column="sku_id"/>
        <result property="wareId" column="ware_id"/>
        <result property="stock" column="stock"/>
        <result property="skuName" column="sku_name"/>
        <result property="stockLocked" column="stock_locked"/>
    </resultMap>

    <!-- 结果映射 -->
    <resultMap id="skuStockVoMap" type="com.losgai.gulimall.ware.vo.SkuStockVo">
        <result property="skuId" column="sku_id"/>
        <result property="hasStock" column="has_stock"/>
    </resultMap>

    <update id="addToStock">
        UPDATE wms_ware_sku SET stock = stock + #{stock} WHERE sku_id = #{skuId} AND ware_id = #{wareId}
    </update>

    <!-- 批量SKU库存查询 -->
    <select id="getSkuHasStock" resultMap="skuStockVoMap">
        SELECT
        sku_id,
        CASE
        WHEN SUM(stock - stock_locked) > 0 THEN 1
        ELSE 0
        END AS has_stock
        FROM wms_ware_sku
        WHERE sku_id IN
        <foreach collection="skuIds" item="skuId" open="(" close=")" separator=",">
            #{skuId}
        </foreach>
        GROUP BY sku_id
    </select>

</mapper>